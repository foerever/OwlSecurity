<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emergency_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/darktexture"
    tools:context="com.sneakred.securitycam.EmergencyContacts">

    <TextView
        android:id="@+id/emergencycontacts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Emergency Contacts"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/emergencycontacts_phone_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Emergency Contact 1"
        android:inputType="phone"
        android:text=""
        android:layout_below="@+id/emergencycontacts_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/emergencycontacts_phone_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Emergency Contact 2"
        android:inputType="phone"
        android:text=""
        android:layout_below="@+id/emergencycontacts_phone_one"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/emergencycontacts_phone_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Emergency Contact 3"
        android:inputType="phone"
        android:text=""
        android:layout_below="@+id/emergencycontacts_phone_two"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/emergencycontacts_phone_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Emergency Contact 4"
        android:inputType="phone"
        android:text=""
        android:layout_below="@+id/emergencycontacts_phone_three"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/emergencycontacts_phone_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Emergency Contact 5"
        android:inputType="phone"
        android:text=""
        android:layout_below="@+id/emergencycontacts_phone_four"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
